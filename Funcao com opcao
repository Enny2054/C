# include  <stdio.h>

void soma ( num1, int num2) {
  printf ("Soma = %d\n", num1 + num2);
}int

int subtracao (int num1, int num2) {
  printf ("Subtração = %d\n", num1 - num2);
}

int main () {

  int n1, n2, opcao;

  printf ("Digite o primeiro número: ");
  scanf ("%d", &n1);
  printf ("Digite o segundo número: ");
  scanf ("%d", &n2);
  printf("Digite uma opcão: \n1- Soma ,\n2- Subtracao \n");
  scanf("%d", &opcao);
  
  switch (opcao) {
    case 1:
      soma (n1, n2);
      break;
    case 2:
      subtracao (n1, n2);
      break;
      default:
        printf("Opção inválida");
        break;
          }

         printf("Fim do programa");
return 0;

}
