#include <stdio.h>

int main(){

  int idade, soma=0, qtd=0, media;

  printf("Digite a idade: ");
   scanf("%d", &idade);
  
  while(idade != 0){
    qtd ++;
    soma+=idade;
    
    printf("Digite a idade: ");
     scanf("%d", &idade);
   }
  if(qtd == 0){
    media = soma/qtd;
  }
  
  printf("A média das idades é: %d", media);
  printf("A quantidade de idades informadas é %d", qtd);
  
  return 0;
}
